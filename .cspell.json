// cSpell Settings
{
	// Version of the setting file.  Always 0.2
	"version": "0.2",
	//Idiomas
	"language": "es, en",
	//Nombre de diccionarios donde vamos a poner palabras para que no las marque como error
	"dictionaries": [
		"Custom Words (Spanish)",
		"Custom Words (English)"
	],
	//Definimos los diccionarios
	"dictionaryDefinitions": [
		{
			"name": "Custom Words (English)",
			"path": "./custom-words.en.txt",
			"addWords": true
		},
		{
			"name": "Custom Words (Spanish)",
			"path": "./custom-words.es.txt",
			"addWords": true
		}
	],
	//Ignoramos estas palabras
	"ignoreWords": [
		"Boton",
		"Elon",
		"Iturra",
		"Snowly",
		"elonmusk",
		"kainsvart",
		"midudev",
		"numeros",
		"pheralb",
		"santiitobi",
		"xsnowly"
	],
	//Ignoramos estos archivos/carpetas
	"ignorePaths": [
		"**/.gitignore",
		"node_modules/**"
	]
}
